{
  "name": "bgm.res",
  "title": "BGM.res",
  "version": "0.8.0",
  "description": "BGM.res-A local bangumi manager",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "BGM.res",
    "bangumi",
    "local manager"
  ],
  "author": "JimHan",
  "license": "GPL",
  "build": {
    "productName": "bgm.res",
    "appId": "com.Zerolite.bgm-res",
    "copyright": "2022 Zerolite Studio All Rights Reserved.",
    "asar": true,
    "extraResources": [
      {
        "from": "./mpv",
        "to": "./mpv"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "./assets/app.ico",
      "asarUnpack": [
        "src/**",
        "README.md"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./install.ico",
      "uninstallerIcon": "./install.ico",
      "installerHeaderIcon": "./assets/app.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "bgm.res"
    }
  },
  "devDependencies": {
    "electron": "^20.1.3",
    "electron-builder": "^23.5.1"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "electron-store": "^8.1.0",
    "node-mpv": "^1.5.0"
  }
}
